{
  "type": "database_scan_skipped",
  "db_type": "oracle",
  "version": "{{ oracle_version }}",
  "server": {
    "host": "{{ oracle_server }}",
    "port": {{ oracle_port }},
    "database": "{{ oracle_database }}",
    "service": "{{ oracle_service | default('') }}"
  },
  "skip_details": {
    "reason": "{{ preflight_skip_reason }}",
    "error_code": "{{ preflight_error_code }}",
    "preflight_passed": false
  },
  "execution": {
    "timestamp": "{{ ansible_date_time.iso8601 }}",
    "epoch": {{ ansible_date_time.epoch }},
    "inventory_host": "{{ inventory_hostname }}",
    "delegate_host": "{{ inspec_delegate_host | default('localhost') }}",
    "execution_mode": "{{ 'delegate' if (inspec_delegate_host | default('')) not in ['', 'localhost'] else 'localhost' }}"
  },
  "metadata": {
    "role": "oracle_inspec",
    "profile": "oracle-{{ oracle_version }}-cis",
    "status": "SKIPPED"
  }
}
