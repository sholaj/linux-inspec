{
  "type": "database_scan_skipped",
  "db_type": "mssql",
  "version": "{{ mssql_version }}",
  "server": {
    "host": "{{ mssql_server }}",
    "port": {{ mssql_port }},
    "database": "{{ mssql_database }}",
    "service": "{{ mssql_service | default('') }}"
  },
  "skip_details": {
    "reason": "{{ preflight_skip_reason }}",
    "error_code": "{{ preflight_error_code }}",
    "preflight_passed": false
  },
  "execution": {
    "timestamp": "{{ ansible_date_time.iso8601 }}",
    "epoch": {{ ansible_date_time.epoch }},
    "inventory_host": "{{ inventory_hostname }}",
    "delegate_host": "{{ _delegate_host }}",
    "execution_mode": "{{ 'delegate' if _use_delegate else 'localhost' }}"
  },
  "metadata": {
    "role": "mssql_inspec",
    "profile": "mssql-{{ mssql_version }}-cis",
    "status": "SKIPPED"
  }
