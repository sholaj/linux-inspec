{
  "type": "database_scan_skipped",
  "db_type": "postgresql",
  "version": "{{ postgres_version }}",
  "server": {
    "host": "{{ postgres_server }}",
    "port": {{ postgres_port }},
    "database": "{{ postgres_database }}"
  },
  "skip_details": {
    "reason": "{{ preflight_skip_reason }}",
    "error_code": "{{ preflight_error_code }}",
    "preflight_passed": false
  },
  "execution": {
    "timestamp": "{{ ansible_date_time.iso8601 }}",
    "epoch": {{ ansible_date_time.epoch }},
    "inventory_host": "{{ inventory_hostname }}",
    "delegate_host": "{{ _delegate_host | default('localhost') }}",
    "execution_mode": "{{ 'delegate' if _use_delegate | default(false) else 'localhost' }}"
  },
  "metadata": {
    "role": "postgres_inspec",
    "profile": "postgres-{{ postgres_version }}-cis",
    "status": "SKIPPED"
  }
}
